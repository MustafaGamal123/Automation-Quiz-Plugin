<div id="main">
    <h2>{{quizname}}</h2>

    <script>
function showServerSuspiciousImages() {
    var url = 'report.php?action=suspicious&ajax=1&courseid={{courseid}}&cmid={{cmid}}';
    fetch(url)
        .then(res => res.json())
        .then(urls => {
            if (!urls.length) {
                alert('No suspicious images found on server.');
                return;
            }
            let modal = document.getElementById('server-suspicious-modal');
            if (!modal) {
                modal = document.createElement('div');
                modal.id = 'server-suspicious-modal';
                modal.style.cssText = 'position:fixed;top:0;left:0;width:100vw;height:100vh;background:rgba(0,0,0,0.8);z-index:999999;display:flex;align-items:center;justify-content:center;';
                modal.innerHTML = `
                    <div style="background:#fff;padding:20px;border-radius:10px;max-width:90vw;max-height:90vh;overflow:auto;position:relative;">
                        <button onclick=\"document.getElementById('server-suspicious-modal').remove()\" style=\"position:absolute;top:10px;right:10px;font-size:20px;\">&times;</button>
                        <h2 style=\"margin-top:0;\">Suspicious Images (from server)</h2>
                        <div id=\"server-suspicious-images\" style=\"display:flex;flex-wrap:wrap;gap:20px;\"></div>
                    </div>
                `;
                document.body.appendChild(modal);
            }
            let container = document.getElementById('server-suspicious-images');
            container.innerHTML = '';
            urls.forEach(url => {
                let div = document.createElement('div');
                div.style = 'text-align:center;';
                div.innerHTML = `<img src="${url}" style="max-width:250px;max-height:200px;border:2px solid #dc3545;border-radius:8px;"><br><span style="font-size:12px;">${url.split('/').pop()}</span>`;
                container.appendChild(div);
            });
            modal.style.display = 'flex';
        })
        .catch(err => alert('Error loading suspicious images from server.'));
}
</script>
    <div class="box generalbox adminerror p-y-1">
        {{proctoringsummary}}
    </div>
    <br/>
    {{#backbutton}}
    <div class="mb-3">
        <a href="{{backbutton}}" type="button" class="btn btn-secondary">{{#str}}back,quizaccess_proctoring{{/str}}</a>
    </div>
    {{/backbutton}}

    <div class="container-fluid mb-3 p-1 m-1">
        <div class="row d-flex justify-content-between align-items-start flex-wrap p-0">
            <div class="col-8 p-0">
                <form action="{{url}}" class="d-flex flex-wrap align-items-start p-0">
                    <input type="hidden" id="courseid" name="courseid" value="{{courseid}}">
                    <input type="hidden" id="cmid" name="cmid" value="{{cmid}}">
                    <input type="text"
                           class="form-control ml-2"
                           id="searchKey"
                           name="searchKey"
                           placeholder="Search by email"
                           value="{{searchkey}}">

                    <input type="submit" class="btn btn-primary ml-2" name="submitType" value="Search">

                    {{#showclearbutton}}
                    <input type="submit" class="btn btn-secondary ml-2" name="submitType" value="Clear">
                    {{/showclearbutton}}
                </form>
            </div>

            <div class="col-md-auto mt-2 mt-md-0 text-md-end me-0 pe-0">
                {{#settingsbtn}}
                <a class="btn btn-primary" href="{{settingspageurl}}">{{#str}}course_proctoring_summary,quizaccess_proctoring{{/str}}</a>
                {{/settingsbtn}}
            </div>
        </div>
    </div>

    {{#checkrow}}
    <table class="table">
        <thead>
            <tr>
                <th>{{#str}}user,quizaccess_proctoring{{/str}}</th>
                <th>{{#str}}email,quizaccess_proctoring{{/str}}</th>
                <th>{{#str}}dateverified,quizaccess_proctoring{{/str}}</th>
                <th>{{#str}}identity_mismatch_label,quizaccess_proctoring{{/str}}</th>
                <th>{{#str}}cheating_status,quizaccess_proctoring{{/str}}</th>
                <th>{{#str}}actions,quizaccess_proctoring{{/str}}</th>
            </tr>
        </thead>
        <tbody>
        {{#rows}}
            <tr>
                <td><a href="{{userlink}}" target="_blank">{{fullname}}</a></td>
                <td>{{email}}</td>
                <td>{{timemodified}}</td>
                <td>
                    {{#warningicon}}
                        {{#str}}notfoundtext,quizaccess_proctoring{{/str}}
                    {{/warningicon}}
                    {{^warningicon}}
                        {{#str}}foundtext,quizaccess_proctoring{{/str}}
                    {{/warningicon}}
                </td>
                <td>
                    {{#haswarning_eq_Yes}}
                        <span class="badge badge-danger text-white" style="background-color: #dc3545;">Yes</span>
                    {{/haswarning_eq_Yes}}
                    {{#haswarning_eq_No}}
                        <span class="badge badge-success text-white" style="background-color: #28a745;">No</span>
                    {{/haswarning_eq_No}}
                </td>
                <td>
                    {{#actionmenu}}
                        {{{actionmenu}}}
                    {{/actionmenu}}
                </td>
            </tr>
        {{/rows}}
        </tbody>
    </table>
    {{/checkrow}}

    {{^checkrow}}
    <div class="alert alert-info text-center" role="alert">
        {{#str}}examdata,quizaccess_proctoring{{/str}}
    </div>
    {{/checkrow}}
</div>